<div class="blog_top">
    <div class="area_bar">
        <ul>
            <li>
                <a href="/">블로그 홈</a>
            </li>
            <li>
                <a href="#">이웃 블로그</a>
            </li>
            <% if(mbrNo == '') { %>
            <li class="login_box">
                <a href="#" class="sign_in" id="blogLogin">로그인</a>
            </li>
            <% } else { %>
            <li class="profile_box">
                <div class="name_box">
                    <span class="txt nickname"><%= mbrNknm %></span>▼
                </div>
                <span class="ico_arrow"></span>
                <div class="area_drop_box">
                    <div class="drop_my_content">
                        <div class="drop_img">
                            <a href="#"><img src="https://phinf.pstatic.net/contact/20200706_251/1594042077178qQQwA_JPEG/1534588212758-01-01.jpeg?type=s80"></a>
                        </div>
                        <div class="drop_txt">
                            <p class="txt">
                                <a href="#"><%= mbrNknm %></a>님
                                설정
                            </p>
                            <a href="#"><%= (mbrEmail == '' ? smbrUid : mbrEmail) %></a>
                        </div>
                    </div>
                    <div class="drop_my_community">
                        <a href="/blog/<%= mbrNo %>" class="my_blog">내 블로그</a>
                        <a href="#" class="logout" id="blogLogout">로그아웃</a>
                    </div>
                </div>
            </li>
            <% } %>
        </ul>
    </div>
</div>
<div class="blog_top_title">
    <div class="blog_title">
        <h1 class="blog_title_txt"><%= blogInfo.BLG_NM %></h1>
    </div>
    <div class="blog_menu">
        <div class="menu1">
            <ul>
                <% for(let i = 0; i < blogMenuList.length - 1; i++) { %>
                    <li><a href="#"><%= blogMenuList[i].BLG_MNU_NM %></a></li>
                <% } %>
            </ul>
        </div>
        <div class="menu2">
            <ul>
                <li><a href="#">태그</a></li>
                <li><a href="#"><%= blogMenuList[blogMenuList.length - 1].BLG_MNU_NM %></a></li>
            </ul>
        </div>
    </div>
    <div>
        <% if(blogInfo.INTG_MBR_NO == mbrNo) { %>
        <a href="/blog/<%= mbrNo %>/write">글쓰기</a>
        <% } %>
    </div>
</div>
